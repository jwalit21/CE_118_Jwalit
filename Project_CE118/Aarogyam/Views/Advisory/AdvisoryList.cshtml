@model IEnumerable<Aarogyam.Models.Advisory>

@{
    ViewData["Title"] = "AdvisoryList";
}

<h3>Advisory List</h3>
<p>These Advisories are published by the Government in reference for COVID19 to the citizens.</p>

<table class="table table-responsive-lg ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.AdvisoryId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
