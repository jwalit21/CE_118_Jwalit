@model Aarogyam.Models.Task

@{
    ViewData["Title"] = "Create";
    IList<SelectListItem> hospital_users = (IList<SelectListItem>)ViewBag.hospital_list;
}

<h4>Assign a new Task</h4>
<hr />

<div class="row">
    <div class="col-md-6 card shadow-sm o-hidden my-1 p-3" style="border-radius:10px; border-right: 4px solid #06413a; background-color: rgba(228, 244, 242, 0.83)">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfIssue" class="control-label"></label>
                <input asp-for="DateOfIssue" class="form-control" />
                <span asp-validation-for="DateOfIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfDue" class="control-label"></label>
                <input asp-for="DateOfDue" class="form-control" />
                <span asp-validation-for="DateOfDue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Hospital.Id" class="control-label"></label>
                <select asp-for="Hospital.Id" asp-items="hospital_users" class="form-control"></select>
                <span asp-validation-for="Hospital.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index" asp-controller="Task">Back to Assigned Pending Task List</a>
            </div>
            <div>
                <a asp-action="FinishedListGoverment" asp-controller="Task">Back to Assigned Finished Task List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
