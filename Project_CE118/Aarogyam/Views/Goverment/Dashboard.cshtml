
@{
    ViewData["Title"] = "Dashboard";
    var hospitals = ViewBag.total_hospitals;
    var pending_tasks = ViewBag.total_pending_tasks;
    var advisories = ViewBag.total_advisories;
    var is_provided = ViewBag.is_provided;
    var citizens = ViewBag.citizens;
}

<h4 class="ml-3">Dashboard</h4>
<div class="container">
    @if (!is_provided)
    {
        <div class="row ml-1">
            <div class="card shadow my-2 col-sm-6 bg-danger">
                <div class="card-body" style="color:white;">
                    You haven't provided todays Covid Data Please provide it now...!!!!
                </div>
                <div class="card-footer">
                    <a class="btn btn-sm btn-danger" asp-action="Create" asp-controller="CovidData">Publish Covid Data</a>
                </div>
            </div>
        </div>
        <hr />
        <br />
        <script type="text/javascript">
            alert("You haven't provided Covid Data today, Please provide it now...!!!!);
        </script>
    }
<div class="row">
    <div class="col-sm-3">
        <div class="card bg-primary">
            <div class="card-header" style="color:white">
                Total registered Hospitals
            </div>
            <div class="card-body font-weight-bolder">
                @hospitals
            </div>
            <div class="card-footer">
                <a class="btn btn-sm btn-primary" asp-action="HospitalList" asp-controller="Goverment">Hospitals</a>
            </div>
        </div>
    </div>
    <hr />
    <div class="col-sm-3">
        <div class="card bg-warning">
            <div class="card-header" style="color:white">
                Total Pending Tasks
            </div>
            <div class="card-body font-weight-bolder">
                @pending_tasks
            </div>
            <div class="card-footer">
                <a class="btn btn-sm btn-warning" asp-action="Index" asp-controller="Task">Pending Tasks</a>
            </div>
        </div>
    </div>
    <hr />
    <div class="col-sm-3">
        <div class="card bg-secondary">
            <div class="card-header" style="color:white">
                Total Published Advisories
            </div>
            <div class="card-body font-weight-bolder">
                @advisories
            </div>
            <div class="card-footer">
                <a class="btn btn-sm btn-secondary" asp-action="Index" asp-controller="Advisory">Advisories</a>
            </div>
        </div>
    </div>
    <hr />
    <div class="col-sm-3">
        <div class="card bg-success">
            <div class="card-header" style="color:white">
                Total Registered Citizens 
            </div>
            <div class="card-body font-weight-bolder">
                @citizens
            </div>
            <div class="card-footer">
                <a class="btn btn-sm btn-success">Citizens</a>
            </div>
        </div>
    </div>
</div>
</div>
